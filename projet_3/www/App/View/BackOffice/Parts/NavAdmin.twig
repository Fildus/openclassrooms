<div class="row">
    {% if not page %} <div class="col-2"></div> {% endif %}
    {% if page %}
        {% for page in page %}
            <div class="left-button col-2 text-center"><a href="{{ page.previous }}"><i class="fas fa-arrow-left"></i></a></div>
        {% endfor %}
    {% endif %}
    <div class="col-8 row">
        {% for session in session %}

            {% if session.rights >= 3 %}
                <div class="nav-item active nav-item-admin-custom col-lg-3 col-md-12 text-center">
                    <a class="nav-link" href="/admin/chapitres/page-1"><i class="fas fa-book"></i> Chapitres<span class="sr-only">(current)</span></a>
                </div>
            {% endif %}

        {% if session.rights >= 3 %}
            <div class="nav-item active nav-item-admin-custom col-lg-3 col-md-12 text-center">
                <a class="nav-link" href="/admin/articles/page-1"><i class="fas fa-edit"></i> Articles<span class="sr-only">(current)</span></a>
            </div>
        {% endif %}

        {% if session.rights >= 2 %}
            <div class="nav-item active nav-item-admin-custom col-lg-3 col-md-12 text-center">
                <a class="nav-link" href="/admin/commentaires/page-1"><i class="fas fa-comments"></i> Commentaires<span class="sr-only">(current)</span></a>
            </div>
        {% endif %}

        {% if session.rights == 4 %}
            <div class="nav-item active nav-item-admin-custom col-lg-3 col-md-12 text-center">
                <a class="nav-link" href="/admin/utilisateurs/page-1"><i class="fas fa-users"></i> Utilisateurs<span class="sr-only">(current)</span></a>
            </div>
        {% endif %}

        {% endfor %}
    </div>
    {% if page %}
        {% for page in page %}
            <div class="right-button col-2 text-center"><a href="{{ page.next }}"><i class="fas fa-arrow-right"></i></a></div>
        {% endfor %}
    {% endif %}
    {% if not page %} <div class="col-2"></div> {% endif %}
</div>