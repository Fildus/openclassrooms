{% extends "LayoutAdmin.twig" %}

{% block content %}

    <div class="big-title-admin">
        <h1>Utilisateurs</h1>
    </div>

    <div class="container">
    <table class="table table-striped  text-center">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Pseudonyme              </th>
            <th scope="col">Date de création        </th>
            <th scope="col">Droits                  </th>
            <th scope="col">Plus d'infos            </th>
            <th scope="col">Supprimer               </th>
        </tr>
        </thead>

        <tbody>
        {% for users in users %}
            <tr>
                <td>{{ users.pseudo }}                      </td>
                <td>{{ users.creation_date|date("d/m/Y") }} </td>
                <td>
                    {% if users.rights == 1 %}Visiteur{% endif %}
                    {% if users.rights == 2 %}Modérateur{% endif %}
                    {% if users.rights == 3 %}Autheur{% endif %}
                    {% if users.rights == 4 %}Administrateur{% endif %}
                </td>


                <td>
                    <a href="/admin/utilisateur-{{ users.id }}" class="btn btn-outline-primary">Plus d'infos</a>
                </td>

                <td>
                    <form action="" method="post">
                        <button class="btn btn-outline-danger col-12" type="submit" name="deleteUser[id]" value="{{ users.id }}">
                            Supprimer!
                        </button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}