{% extends "LayoutAdmin.twig" %}

{% block content %}

    <div class="big-title-admin">
        <h1>Articles</h1>
    </div>

    <div class="container">
        <table class="table table-striped  text-center">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Titre           </th>
                <th scope="col">Author          </th>
                <th scope="col">Chapitre        </th>
                <th scope="col">Visibilité      </th>
                <th scope="col">Éditer          </th>
                <th scope="col">Supprimer       </th>
            </tr>
            </thead>
            <tbody>
            {% for articles in articles %}
                <tr>
                    <td>{{ articles.article_title         }}                                                         </td>
                    <td>{{ articles.users_pseudo          }}                                                         </td>
                    <td>{{ articles.chapter_name          }}                                                         </td>
                    <td>{{ articles.article_visibility    }}                                                         </td>
                    <td><a href="/admin/article-{{ articles.article_id }}" class="btn btn-outline-primary">Editer</a></td>
                    <td>
                        {% for session in session %}
                            {% if session.rights == 4 %}
                                <form action="" method="post"><button type="submit" name="deleteArticle[id]" value="{{ articles.article_id }}" class="btn btn-outline-danger">Supprimer</button></form>
                            {% else %}
                                <button class="btn btn-outline-dark">Non disponible</button>
                            {% endif %}
                        {% endfor %}
                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
        {{ include('NewArticle.twig') }}
        <div class="col-12 d-flex flex-column-reverse">
            <button type="button" data-toggle="modal" data-target="#NewArticle" class="btn btn-success align-self-end">Nouvel article</button>
        </div>

    </div>

{% endblock %}