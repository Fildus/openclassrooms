<div class="modal fade" id="Comment{{ comment.id }}" tabindex="-1" role="dialog" aria-labelledby="Comment" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="Comment">Commentaire</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form name="createComment" method="post" action="">
                    <div class="form-group">

                        <div class="input-group mb-3">
                            <label for="title" class="form-control-label"></label>
                            <input name="createComment[title]" class="form-control" placeholder="Titre du commentaire" aria-label="title" aria-describedby="basic-addon1" required maxlength="50" minlength="6">
                        </div>

                        <div class="input-group mb-3">
                            <label for="content" class="form-control-label"></label>
                            <textarea name="createComment[content]" type="text" class="form-control" placeholder="Tapez votre message ici" aria-label="content" aria-describedby="basic-addon2" required minlength="6" maxlength="500"></textarea>
                        </div>
                        <input name="createComment[comment_id]" type="text" value="{{ comment.id }}" hidden>
                        <input name="createComment[article_id]" type="text" value="{{ article.article_id }}" hidden>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                        <button type="submit" class="btn btn-primary">Envoyer!</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>